                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>
    
    <div class="form-group">
        {{ form.message.label }}
        {{ form.message(rows=5, cols=40) }}
        {% if form.message.errors %}
